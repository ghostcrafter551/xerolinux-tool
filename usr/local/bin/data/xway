#!/bin/bash
#set -e
echo "#################################"
echo " Setting X11 As Default Session. "
echo "#################################"
sleep 3
sudo sed -i "7i DisplayServer=x11" /etc/sddm.conf.d/kde_settings.conf
sleep 3
echo "#################################"
echo "      Done! Will Reboot Now      "
echo "#################################"
sleep 20
reboot
