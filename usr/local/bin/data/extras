--field="<b>Install VirtManager</b>":fbtn "konsole -e sh -c 'sudo /usr/local/bin/data/kvm-qemu'" \
--field="<b>Install/Enable Firewall</b>":fbtn '/usr/local/bin/data/secu' \
--field="<b>Install Visual-Studio</b>":fbtn '/usr/local/bin/data/vstudio' \
--field="<b>Install Jitsi Meet</b>":fbtn "konsole --noclose -e sh -c 'sudo pacman -S --noconfirm jitsi-meet-desktop-bin'" \
