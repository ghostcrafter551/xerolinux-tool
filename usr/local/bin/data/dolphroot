#!/bin/bash
#set -e
echo "#################################"
echo " Adding Dolphin Root Privileges. "
echo "#################################"
sleep 2
sudo pacman -Rdd thunar thunar-archive-plugin thunar-media-tags-plugin thunar-volman
sleep 2
cd $HOME/.local/share/kservices5/ServiceMenus/ && rm OpenrAsRoot.desktop
sleep 2
cd $HOME/.local/share/kservices5/ServiceMenus/ && wget https://codeberg.org/XeroLinux/os-fixes/raw/branch/main/patches/open_as_root.desktop
sleep 2
echo "#################################"
echo "     Done! Restart Dolphin.      "
echo "#################################"
