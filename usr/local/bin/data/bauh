#!/bin/bash
#set -e
echo "#################################"
echo "  Replacing Pamac With Bauh GUI. "
echo "#################################"
sleep 3
sudo pacman -Rdd --noconfirm pamac-all libpamac-full
sudo pacman -S --noconfirm bauh ccache flatpak
sleep 3
rm $HOME/.config/autostart/pamac-tray-plasma.desktop
cd $HOME/.config/autostart/ && wget https://raw.githubusercontent.com/xerolinux/kde-rice/main/etc/skel/.config/autostart/bauh-tray.desktop
cd $HOME/.config/ && mkdir bauh && cd bauh/ && wget https://github.com/xerolinux/kde-rice/blob/main/etc/skel/.config/bauh/config.yml
cd /usr/share/ && sudo mkdir b-tray && cd /usr/share/b-tray/ && sudo wget https://codeberg.org/XeroLinux-Dev/kde_iso_dev/raw/branch/main/archiso/airootfs/usr/share/b-tray/def.png
cd /usr/share/b-tray/ && sudo wget https://codeberg.org/XeroLinux-Dev/kde_iso_dev/raw/branch/main/archiso/airootfs/usr/share/b-tray/upd.png
sleep 3
echo "#################################"
echo "      Done! You Can Close It     "
echo "#################################"
