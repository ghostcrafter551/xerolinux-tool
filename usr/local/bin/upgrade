#!/usr/bin/env bash
#set -e
echo "##########################################"
echo "       System Settings Update Tool.       "
echo "##########################################"
sleep 5
read -r -p "New System Settings Update Detected, Update Now ? [y/N] " response
response=${response,,}
if [[ "$response" =~ ^(yes|y)$ ]]; then
    echo "Applying Updated Configs"
    sudo rm /etc/pacman.conf
    cd /etc/ && sudo wget https://raw.githubusercontent.com/TechXero/Store/master/scripts/pacmanNoKernels.conf
    sudo mv /etc/pacmanNoKernels.conf /etc/pacman.conf
    cd /etc/pacman.d/ && sudo rm xero-mirrorlist
    cd /etc/pacman.d/ && sudo wget https://raw.githubusercontent.com/TechXero/Store/master/scripts/xero-mirrorlist
    sed -i "s/pamac-tray/pamac-tray-plasma/g" ~/.config/autostart/Update-Tray.desktop
    sudo rm /usr/local/bin/upgrade
    sudo mv /usr/local/bin/noupgrade /usr/local/bin/upgrade
    echo "All Done ! Enjoy ;)"
    sleep 5
    #reboot
else
    echo "OK, then. Skipping System upgrade."
    exit
fi
